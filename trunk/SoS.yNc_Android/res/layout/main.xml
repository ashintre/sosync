<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
	android:id="@+id/head" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/app_name"
    android:textSize="50px"
    android:textStyle="bold"
    android:typeface="serif"
    />  
  
<Button android:id="@+id/edit_settings"    
			android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Edit Settings"
            android:textStyle="bold"/>

<Button android:id="@+id/google_calender" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_above="@id/edit_settings"
            android:layout_centerHorizontal="true"
            android:text="Google Calender"
            android:textStyle="bold"/>      
            
<Button android:id="@+id/fb_sync" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_above="@id/google_calender"
            android:layout_centerHorizontal="true"
            android:text="Facebook Synchronization"
            android:textStyle="bold"/>            
</RelativeLayout>

